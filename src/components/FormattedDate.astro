---
interface Props {
	date: Date;
}

const { date: propDate } = Astro.props;
const date = propDate instanceof Date ? propDate : new Date(propDate);
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
